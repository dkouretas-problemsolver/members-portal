{
  "version": 2,
  "routes": [
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^/dashboard$", "dest": "/public/dashboard.html" },
    { "src": "^/reset$", "dest": "/public/reset.html" },

    { "src": "^/login$", "dest": "/public/index.html" },
    { "src": "^/login.html$", "dest": "/public/index.html" },

    { "src": "^/favicon.ico$", "dest": "/public/favicon.ico" },

    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
